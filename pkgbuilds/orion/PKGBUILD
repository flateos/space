pkgname=orion
pkgver=0.2.0
pkgrel=1
epoch=0
pkgdesc="Minimalist theme for sddm."
arch=("x86_64")
url="https://github.com/flateos/orion"
license=('GPL3')
source=("git+https://github.com/flateos/${pkgname}.git")
validpgpkeys=()
depends=()
makedepends=('git')
md5sums=('SKIP')

package() {
    local src="${srcdir}/${pkgname}"
    local dest="${pkgdir}/usr/share/sddm/themes/${pkgname}"

    install -d  $dest
    cp -r "${src}/"* "${dest}"
}
